# Basic Ghostty Configuration

# Theme - load the custom theme we created
# Dark theme:
theme = kanso-zen.conf
 # Light theme:
# theme = kanso-pearl.conf

# Font settings
font-family = "JetBrains Mono"
font-size = 10
# font-feature = liga, calt # Enable ligatures and contextual alternates

# Window settings
window-width = 100
window-height = 30
window-padding-x = 10
window-padding-y = 10
window-decoration = none

# Terminal behavior
shell-integration = zsh
cursor-style = block
cursor-style-blink = true
cursor-invert-fg-bg = true
mouse-hide-while-typing = true
background-opacity = 0.95
# adjust-cell-height = 120% # Increase line spacing (uncomment to enable)

# Keybindings

keybind = super+shift+plus=increase_font_size:1
keybind = super+shift+minus=decrease_font_size:1
